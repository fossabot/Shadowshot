<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:lex="http://wpflocalizeextension.codeplex.com"
                    xmlns:viewModels="clr-namespace:Shadowshot.ViewModels">
    <tb:TaskbarIcon x:Key="NotifyIcon"
                    lex:LocalizeDictionary.DesignCulture="en-US"
                    lex:ResxLocalizationProvider.DefaultAssembly="Shadowshot"
                    lex:ResxLocalizationProvider.DefaultDictionary="Strings"
                    IconSource="../Icon.ico" ToolTipText="{lex:Loc Shadowshot}">
        <tb:TaskbarIcon.DataContext>
            <viewModels:NotifyIconViewModel />
        </tb:TaskbarIcon.DataContext>
        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <MenuItem Header="{lex:Loc Settings}" Command="{Binding SettingsCommand}" />
                <MenuItem Header="{lex:Loc About}" Command="{Binding AboutCommand}" />
                <Separator />
                <MenuItem Header="{lex:Loc Exit}" Command="{Binding ExitCommand}" />
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>
    </tb:TaskbarIcon>
</ResourceDictionary>
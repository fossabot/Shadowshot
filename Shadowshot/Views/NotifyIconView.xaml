<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:viewModels="clr-namespace:Shadowshot.ViewModels"
                    xmlns:local="clr-namespace:Shadowshot.Properties">
    <tb:TaskbarIcon x:Key="NotifyIcon"
                    IconSource="../Icon.ico" ToolTipText="{x:Static local:Strings.Shadowshot}">
        <tb:TaskbarIcon.DataContext>
            <viewModels:NotifyIconViewModel />
        </tb:TaskbarIcon.DataContext>
        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <MenuItem Header="{x:Static local:Strings.Settings}" Command="{Binding SettingsCommand}" />
                <MenuItem Header="{x:Static local:Strings.About}" Command="{Binding AboutCommand}" />
                <Separator />
                <MenuItem Header="{x:Static local:Strings.Exit}" Command="{Binding ExitCommand}" />
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>
    </tb:TaskbarIcon>
</ResourceDictionary>
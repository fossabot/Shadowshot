<Window x:Class="Shadowshot.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Shadowshot.ViewModels"
        mc:Ignorable="d"
        Title="Settings" Height="405" Width="540"
        DataContextChanged="OnDataContextChanged">
    <Window.DataContext>
        <viewModels:SettingsViewModel />
    </Window.DataContext>
    <Grid>
        <DockPanel Margin="11">
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Width="75" Height="23" Margin="0,0,7,0" Command="{Binding OkCommand}">OK</Button>
                <Button Width="75" Height="23" Command="{Binding CancelCommand}">Cancel</Button>
            </StackPanel>
            <StackPanel>
                <GroupBox Header="General" Margin="0,0,0,11">
                    <StackPanel Margin="3,5,3,3">
                        <CheckBox Height="17" IsChecked="{Binding IsAutoStart}" IsEnabled="{Binding IsAutoStartEnabled}">Launch shadowshot when system starts</CheckBox>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Keyboard Shortcuts">
                    <StackPanel Margin="3,5,3,3">
                        <StackPanel Margin="0,0,0,7">
                            <TextBlock Margin="0,0,0,5">Take a screenshot of entire screen and save to desktop:</TextBlock>
                            <TextBox x:Name="EntireScreenToDesktopHotkeyTextBox"
                                     Height="23" VerticalContentAlignment="Center"
                                     Text="{Binding EntireScreenToDesktopHotkeyText}" />
                        </StackPanel>
                        <StackPanel Margin="0,0,0,7">
                            <TextBlock Margin="0,0,0,5">Take a screenshot of active window and save to desktop:</TextBlock>
                            <TextBox x:Name="ActiveWindowToDesktopHotkeyTextBox"
                                Height="23" VerticalContentAlignment="Center"
                                     Text="{Binding ActiveWindowToDesktopHotkeyText}" />
                        </StackPanel>
                        <StackPanel Margin="0,0,0,7">
                            <TextBlock Margin="0,0,0,5">Take a screenshot of entire screen and save to clipboard:</TextBlock>
                            <TextBox x:Name="EntireScreenToClipboardHotkeyTextBox"
                                Height="23" VerticalContentAlignment="Center"
                                     Text="{Binding EntireScreenToClipboardHotkeyText}" />
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Margin="0,0,0,5">Take a screenshot of active window and save to clipboard:</TextBlock>
                            <TextBox x:Name="ActiveWindowToClipboardHotkeyTextBox"
                                     Height="23" VerticalContentAlignment="Center"
                                     Text="{Binding ActiveWindowToClipboardHotkeyText}" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>

<Window x:Uid="Window_1" x:Class="Shadowshot.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Shadowshot.ViewModels"
        mc:Ignorable="d"
        Title="Settings" MinWidth="450" ResizeMode="NoResize" SizeToContent="WidthAndHeight" 
        DataContextChanged="OnDataContextChanged">
    <Window.DataContext>
        <viewModels:SettingsViewModel x:Uid="viewModels:SettingsViewModel_1" />
    </Window.DataContext>
    <Grid x:Uid="Grid_1">
        <DockPanel x:Uid="DockPanel_1" Margin="11">
            <StackPanel x:Uid="StackPanel_1" DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Uid="Button_1" Width="75" Height="23" Margin="0,0,7,0" Command="{Binding OkCommand}">OK</Button>
                <Button x:Uid="Button_2" Width="75" Height="23" Command="{Binding CancelCommand}">Cancel</Button>
            </StackPanel>
            <StackPanel x:Uid="StackPanel_2" Margin="0,0,0,11">
                <GroupBox x:Uid="GroupBox_1" Header="General" Margin="0,0,0,11">
                    <StackPanel x:Uid="StackPanel_3" Margin="3,5,3,3">
                        <CheckBox x:Uid="CheckBox_1" Height="17" IsChecked="{Binding IsAutoStart}" IsEnabled="{Binding IsAutoStartEnabled}">Launch shadowshot when system starts</CheckBox>
                    </StackPanel>
                </GroupBox>
                <GroupBox x:Uid="GroupBox_2" Header="Keyboard Shortcuts">
                    <StackPanel x:Uid="StackPanel_4" Margin="3,5,3,3">
                        <StackPanel x:Uid="StackPanel_5" Margin="0,0,0,7">
                            <TextBlock x:Uid="TextBlock_1" Margin="0,0,0,5">Take a screenshot of entire screen and save to desktop:</TextBlock>
                            <TextBox x:Uid="EntireScreenToDesktopHotkeyTextBox" x:Name="EntireScreenToDesktopHotkeyTextBox"
                                     Height="23" VerticalContentAlignment="Center"
                                     Text="{Binding EntireScreenToDesktopHotkeyText}" />
                        </StackPanel>
                        <StackPanel x:Uid="StackPanel_6" Margin="0,0,0,7">
                            <TextBlock x:Uid="TextBlock_2" Margin="0,0,0,5">Take a screenshot of active window and save to desktop:</TextBlock>
                            <TextBox x:Uid="ActiveWindowToDesktopHotkeyTextBox" x:Name="ActiveWindowToDesktopHotkeyTextBox"
                                Height="23" VerticalContentAlignment="Center"
                                     Text="{Binding ActiveWindowToDesktopHotkeyText}" />
                        </StackPanel>
                        <StackPanel x:Uid="StackPanel_7" Margin="0,0,0,7">
                            <TextBlock x:Uid="TextBlock_3" Margin="0,0,0,5">Take a screenshot of entire screen and save to clipboard:</TextBlock>
                            <TextBox x:Uid="EntireScreenToClipboardHotkeyTextBox" x:Name="EntireScreenToClipboardHotkeyTextBox"
                                Height="23" VerticalContentAlignment="Center"
                                     Text="{Binding EntireScreenToClipboardHotkeyText}" />
                        </StackPanel>
                        <StackPanel x:Uid="StackPanel_8">
                            <TextBlock x:Uid="TextBlock_4" Margin="0,0,0,5">Take a screenshot of active window and save to clipboard:</TextBlock>
                            <TextBox x:Uid="ActiveWindowToClipboardHotkeyTextBox" x:Name="ActiveWindowToClipboardHotkeyTextBox"
                                     Height="23" VerticalContentAlignment="Center"
                                     Text="{Binding ActiveWindowToClipboardHotkeyText}" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
